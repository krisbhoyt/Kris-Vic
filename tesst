import streamlit as st
import plotly.graph_objects as go

# Create a basic Streamlit input field
st.write("Welcome to the basic ROI calculator")

invoice_volume = st.number_input('Current Invoice Volume per Month', min_value=0, value=1000)
automation_rate = st.number_input('Automation Rate (%)', min_value=0.0, max_value=100.0, value=70.0)

# Display values
st.write(f"Invoice Volume: {invoice_volume}, Automation Rate: {automation_rate}%")

# Example chart
fig = go.Figure(data=[go.Bar(x=["Invoice Volume"], y=[invoice_volume])])
st.plotly_chart(fig)
